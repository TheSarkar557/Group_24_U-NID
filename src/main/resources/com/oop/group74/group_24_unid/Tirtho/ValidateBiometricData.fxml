<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="671.0" prefWidth="905.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group74.group_24_unid.Tirtho.ValidateBiometricDataController">

    <Label layoutX="293.0" layoutY="29.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Validate Biometric Data" />
    <TableView fx:id="biometricTable" layoutX="225.0" layoutY="128.0" prefHeight="306.0" prefWidth="455.0">
        <columns>
            <TableColumn prefWidth="100" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="150" text="Type">
                <cellValueFactory>
                    <PropertyValueFactory property="type" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="120" text="Quality Score">
                <cellValueFactory>
                    <PropertyValueFactory property="qualityScore" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <HBox spacing="10.0" />
    <TextArea fx:id="commentArea" layoutX="214.0" layoutY="533.0" prefHeight="80" promptText="Add comments here" />
     <TextField fx:id="qualityInput" layoutX="216.0" layoutY="476.0" promptText="Enter Quality Score" />
     <Button layoutX="482.0" layoutY="476.0" onAction="#flagMismatch" text="Flag Mismatch" />
     <Button layoutX="592.0" layoutY="476.0" onAction="#markValidated" text="Mark Validated" />
     <Button layoutX="391.0" layoutY="476.0" onAction="#validateData" text="Validate" />
   <Button layoutX="214.0" layoutY="632.0" mnemonicParsing="false" text="Comment" />
   <Button layoutX="41.0" layoutY="43.0" mnemonicParsing="false" text="Back" />

</AnchorPane>
