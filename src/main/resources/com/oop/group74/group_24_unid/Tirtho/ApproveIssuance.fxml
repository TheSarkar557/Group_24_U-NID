<AnchorPane prefHeight="731.0" prefWidth="860.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.group74.group_24_unid.Tirtho.ApproveIssuanceController">
