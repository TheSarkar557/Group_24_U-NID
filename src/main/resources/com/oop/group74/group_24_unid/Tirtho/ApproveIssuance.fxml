    <Label layoutX="280.0" layoutY="49.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Approve U-NID Issuance" />
    <TableView fx:id="applicationTable" layoutX="229.0" layoutY="190.0" prefHeight="296.0" prefWidth="402.0">
        <columns>
            <TableColumn prefWidth="100" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="150" text="Applicant Name">
                <cellValueFactory>
                    <PropertyValueFactory property="applicantName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="120" text="Status">
                <cellValueFactory>
                    <PropertyValueFactory property="status" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <TextArea fx:id="noteArea" layoutX="198.0" layoutY="556.0" prefHeight="80" promptText="Add notes or rejection reason here" />
    <HBox spacing="10.0" />
     <Button layoutX="670.0" layoutY="372.0" onAction="#flagIssues" text="Flag Issues" />
     <Button layoutX="676.0" layoutY="296.0" onAction="#approveIssuance" text="Approve" />
   <Button layoutX="47.0" layoutY="64.0" mnemonicParsing="false" text="Back" />
   <Button layoutX="198.0" layoutY="663.0" mnemonicParsing="false" text="Comment" />

